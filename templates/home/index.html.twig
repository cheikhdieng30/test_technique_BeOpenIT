{% extends 'base.html.twig' %}

{% block title %}Test Technique - BeOpenIT{% endblock %}

{% block body %}
<style>
    body {
        margin: 0;
        padding: 0;
        height: 100vh;
        /* 100% de la hauteur de la fenêtre */
        background-image: url('https://www.jeveuxetredatascientist.fr/wp-content/uploads/2022/06/devops.jpg');
        /* Remplacez par le chemin de votre image */
        background-size: cover;
        /* Pour couvrir tout l'arrière-plan */
        background-position: center;
        /* Pour centrer l'image */
        display: flex;
        justify-content: center;
        /* Centrer horizontalement */
        align-items: center;
        /* Centrer verticalement */
    }

    .content {
        height: 100vh;
        width: 100vw;
        text-align: center;
        color: white;
        /* Couleur du texte */
        background-color: rgba(0, 0, 0, 0.8);
        /* Fond semi-transparent pour améliorer la lisibilité */
        padding: 20px;
        display: flex;
        justify-content: center;
        /* Centrer horizontalement */
        align-items: center;
        /* Centrer verticalement */
    }
</style>
<div class="home">
    <div class="content">
        <div class="container">
            <div class="row">
                <div class="col-md-6 mx-auto">
                    {% for message in app.flashes('error') %}
                    <div class="text-center alert alert-danger" role="alert">
                        {{ message }}
                    </div>
                    {% endfor %}
                    {% if erreur %}
                    <div class="alert alert-danger">
                        {{erreur}}
                    </div>
                    {% endif %}
                    <nav class="navbar navbar-light bg-light">
                        <div class="row mt-3">
                        {{ form_start(form, {'attr': {'class': 'd-flex', 'novalidate': 'novalidate'}}) }}
                        <div class="col">
                            {{ form_row(form.username, {'attr': {'class': 'w-100'}}) }}
                        </div>
                        <div class="ms-2">
                            <button class="btn btn-primary " type="submit">Rechercher</button>
                            {{ form_end(form) }}
                        </div>
                    </div>
                    </nav>
                </div>

            </div>
        </div>
    </div>
</div>
{% endblock %}